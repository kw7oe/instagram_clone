<!DOCTYPE html>
<html>
<head>
  <title>InstagramClone</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body class>

<% if current_user %>
	<nav class = "navbar navbar-default">
		<div class = "nav-container">	
			<div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <%= link_to 'Instagram'.html_safe, root_url, class: "navbar-brand" %>
    	</div>
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">			
				<ul class = "nav navbar-nav navbar-right">
					<li><%= link_to '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>'.html_safe, new_post_path %></li>
					<li><%= link_to '<span class="glyphicon glyphicon-user" aria-hidden="true"></span>'.html_safe, user_path(current_user) %></li>
					<li><%= link_to "Logout", destroy_user_session_path, method: :delete, data: { confirm: "Are you sure?"} %></li>
				</ul>			
			</div>
		</div>
	</nav>	
<% else %>
<br/><br/>
<% end %>

	<div class = "container <%= controller.controller_name %>">
		<%= render 'shared/flash_message' %>
		<%= yield %>
	</div>

</body>
</html>
