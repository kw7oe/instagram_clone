<%= form_for(feed.comments.build) do |f| %>
	<%= hidden_field_tag :user_id, current_user.id %>
	<%= hidden_field_tag :post_id, feed.id %>
  <div class="field">
    <%= f.text_field :comment, class: "form-control", placehold: "Comment..." %>
  </div>
  <div class="actions">
    <%= f.submit "Add Comment", class: "btn btn-primary" %>
  </div>
<% end %>